Question 1:

cat > ~/apache2-ufw-playbook.yaml <<EOF
- name: Installing Apache2 and configuring UFW on target1
  hosts: target1-mgmt
  remote_user: remoteadmin
  tasks:
    - name: Installing Apache2 package
      apt:
        name: apache2
        state: present
        update_cache: yes

    - name: Installing UFW package
      apt:
        name: ufw
        state: present
        update_cache: yes

    - name: Enabling UFW firewall
      ufw:
        state: enabled

    - name: Allowing SSH through UFW
      ufw:
        rule: allow
        port: '22'
        protocol: tcp

    - name: Allowing HTTP through UFW
      ufw:
        rule: allow
        port: '80'
        protocol: tcp
EOF

Question:- 2
cat > ~/mysql-ufw-playbook.yaml <<EOF
- name: Installing MySQL and configuring UFW on target2
  hosts: target2-mgmt
  remote_user: remoteadmin
  tasks:
    - name: Installing MySQL server
      apt:
        name: mysql-server
        state: present
        update_cache: yes

    - name: Installing UFW package
      apt:
        name: ufw
        state: present
        update_cache: yes

    - name: Enabling UFW firewall
      ufw:
        state: enabled

    - name: Allowing SSH through UFW
      ufw:
        rule: allow
        port: '22'
        protocol: tcp

    - name: Allowing MySQL through UFW
      ufw:
        rule: allow
        port: '3306'
        protocol: tcp
EOF
